!!! 5
%html
%head
  %title Cart
  = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
  = stylesheet_link_tag 'formtastic.css', :media => 'screen, projection'
  = stylesheet_link_tag 'formtastic_changes.css', :media => 'screen, projection'
  = stylesheet_link_tag 'print.css', :media => 'print'
  /[if IE]
    = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
  
  = javascript_include_tag :defaults 
  = csrf_meta_tag 

%body
  #container
    #header
      %h1 Cart
      %ul#nav
        %li(class="#{'selected' if controller_name=="categories" || controller_name=="products" }")= link_to "Products", categories_path 
        %li= link_to "Other", "#"
        %li= link_to "Paths", "#"
    #content
      = yield 
    #footer
      &copy; Some Random Stuff
